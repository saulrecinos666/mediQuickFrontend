<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextView.Small">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="TextView.MediumBold">
        <item name="android:textSize">44sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextView.Caption">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">#babec7</item>
    </style>


        <style name="TextView">
            <!-- Define your text view attributes here -->
            <item name="android:textColor">@color/black</item>
            <item name="android:textSize">16sp</item>
            <!-- Add any other attributes you need -->
        </style>


    <style name="TextView.LargeBold">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="CircularImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- Estilo para forma de items del nav -->
    <style name="NavItemShapeAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <!-- Estilo para subheaders del nav -->
    <style name="NavSubheaderTextAppearance" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/grey_600</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">true</item>
    </style>
</resources>